<p id="notice"><%= notice %></p>

<h1>Listing Leaves</h1>

<table id="table_id" width="100%" class="hover" cellspacing="0">
  <thead>
    <tr>
      <th>Staff name</th>
      <th>Department</th>
      <th>Commencement date</th>
      <th>Days applied for</th>
      <th>Vacation address</th>
      <th>Authorizer</th>
      <th>Final authorizer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @leaves.each do |leafe| %>
      <tr>
        <td><%= leafe.staff_name %></td>
        <td><%= leafe.department %></td>
        <td><%= leafe.commencement_date %></td>
        <td><%= leafe.days_applied_for %></td>
        <td><%= leafe.vacation_address %></td>
        <td><%= leafe.authorizer %></td>
        <td><%= leafe.final_authorizer %></td>
        <td><%= link_to 'Show', leafe %></td>
        <td><%= link_to 'Edit', edit_leafe_path(leafe) %></td>
        <td><%= link_to 'Destroy', leafe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

