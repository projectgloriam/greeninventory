<div class="list">
  <div class="list-content">
      <span class="list-title"></span>
      <span class="list-remark"><%= activity.created_at.strftime("%-d %B, %Y %l:%M%P, %A") %></span>
    <% if activity.trackable then %>
      <span class="list-subtitle">Case: <b><%= a.trackable.case %></b> has been created by <%= activity.owner ? activity.owner.name : 'a user' %></span>
  	<% else %>
      <span class="list-remark"><%= activity.created_at.strftime("%-d %B, %Y %l:%M%P, %A") %></span>
  	  <span class="list-subtitle">A new specification case was created by <%= activity.owner ? activity.owner.name : 'a user' %></span>
      <span class="list-remark">It has been removed</span>
  	<% end %>
  </div>
</div>