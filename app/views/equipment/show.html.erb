  <ul class="t-menu horizontal compact">
    <li><a href="<%= url_for edit_equipment_path(@equipment) %>"><span class="icon mif-pencil"></span> Edit</a></li>
    <li><a href="<%= url_for new_equipment_path %>"><span class="icon mif-folder-plus"></span> New</a></li>
    <li><a href="<%= url_for equipment_index_path %>"><span class="icon mif-chevron-left"></span> Back</a></li>
  </ul>
  <br>
<div class="container page-content">
  <div class="grid">
    <div class="row cells2">
      <div class="cell">
          <div class="listview-outlook" data-role="listview">
            <div class="list-group">
              <span class="list-group-toggle">Equipment Details</span> <!--Group title-->
              <div class="list-group-content">
                <!--The contents-->
                  <div class="list marked">
                    <div class="list-content">
                      <span class="list-title"></span>
                      <span class="list-subtitle">Equipment</span>
                      <span class="list-remark"><%= @equipment.equipment_name %></span>
                    </div>
                  </div>
                <div class="list">
                  <div class="list-content">
                    <span class="list-title"></span>
                    <span class="list-subtitle">Model</span>
                    <span class="list-remark"><%= @equipment.model %></span>
                  </div>
                </div>
                  <!-- Enclose code below in rails tag
                   link_to('Serial Number(s)', {:controller => 'serials', :equipment_id => @equipment.id}, :class => "popupwindow button") -->
                <div class="list">
                  <div class="list-content">
                    <span class="list-title"></span>
                    <span class="list-subtitle">Serial Number(s)</span>
                    <span class="list-remark">
                      <% @equipment.serials.each_with_index do |serial, index| %>
                        <%= serial.serial_number %><% if index != @equipment.serials.length - 1 %>, <% end %>
                      <% end %>
                    </span>
                  </div>
                </div>
              </div>
            </div>
          </div>
      </div>
      <div class="cell">
        <div class="listview-outlook" data-role="listview">
          <div class="list-group">
            <span class="list-group-toggle">Other Details</span> <!--Group title-->
            <div class="list-group-content">
              <!--The contents-->
              <div class="list">
                <div class="list-content">
                  <span class="list-title"></span>
                  <span class="list-subtitle">Date</span>
                  <span class="list-remark"><%= @equipment.created_at.strftime("%-d %B, %Y %H:%M:%S (%A)") %></span>
                </div>
              </div>
              <div class="list">
                <div class="list-content">
                  <span class="list-title"></span>
                  <span class="list-subtitle">Engineer</span>
                  <span class="list-remark"><%= @equipment.engineer %></span>
                </div>
              </div>
              <div class="list">
                <div class="list-content">
                  <span class="list-title"></span>
                  <span class="list-subtitle">Job sheet number</span>
                  <span class="list-remark"><%= @equipment.job_sheet_number %></span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="cell">
        <div class="listview-outlook" data-role="listview">
          <div class="list-group">
            <span class="list-group-toggle">Client Related info</span> <!--Group title-->
            <div class="list-group-content">
              <div class="list">
                <div class="list-content">
                  <span class="list-title"></span>
                  <span class="list-subtitle">Case Number</span>
                  <span class="list-remark"><%= @equipment.specification.case %></span>
                </div>
              </div>
            </div><!--list-group-content-->
          </div><!--list group-->
        </div><!--list-outlook-->
      </div><!--cell-->
    </div>
  </div><!--grid-->
</div><!--container-->


